if [ -f "package.json" ]; then
  echo "  ğŸ“‹ Running backend linting..."
  npm run lint || { echo "âŒ Backend linting failed"; exit 1; }
  
  echo "  â­ï¸  Skipping backend build/tests temporarily (images unblock)"
